---
import { Icon } from 'astro-icon/components';
import { STATS } from '../data/stats';
---

<section id="stats" class="reveal bg-dark py-12">
	<div class="container">
		<div class="grid grid-cols-2 md:grid-cols-4 gap-8">
			{
				STATS.map(stat => (
					<div class="flex flex-col items-center text-center gap-2">
						<Icon name={stat.icon} class="w-8 h-8 text-primary mb-2" />
						<span class="text-3xl font-bold text-white tracking-tight">{stat.value}</span>
						<span class="text-sm text-light/60 uppercase tracking-widest font-medium">
							{stat.label}
						</span>
					</div>
				))
			}
		</div>
	</div>
</section>
