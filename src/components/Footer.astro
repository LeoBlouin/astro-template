import { NAVIGATION_LINKS } from '../data/navigation';

const currentYear = new Date().getFullYear();
---

<footer class="bg-dark text-light py-12 mt-auto">
	<div class="container mx-auto px-4">
		<div class="grid grid-cols-1 md:grid-cols-3 gap-10">
			<div>
				<h3 class="text-white text-xl mb-4">{SITE_CONFIG.siteName}</h3>
				<p class="text-sm leading-relaxed opacity-70">
					{SITE_CONFIG.description}
				</p>
			</div>

			<div>
				<h3 class="text-white text-xl mb-4">Contact</h3>
				<ul class="space-y-3 text-sm opacity-70">
