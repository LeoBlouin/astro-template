---
import { Image } from 'astro:assets';
import { SITE_CONFIG } from '../data/site-config';
import heroImage from '../assets/hero-artisan.jpg';
---

<section class="relative bg-light overflow-hidden">
  <div class="container grid md:grid-cols-2 gap-12 items-center py-20 md:py-32">
    
    <div class="flex flex-col items-start gap-8 z-10">
      <span class="inline-flex items-center rounded-full bg-primary/10 px-4 py-1.5 text-xs font-semibold text-primary ring-1 ring-inset ring-primary/20">
        Artisan Local Certifié
      </span>

      <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-dark leading-tight tracking-tighter">
        {SITE_CONFIG.seo.title}
      </span>
      </h1>

      <p class="text-lg md:text-xl text-dark/70 max-w-lg">
        {SITE_CONFIG.seo.description}
      </p>

      <div class="flex flex-col sm:flex-row sm:items-center gap-4 w-full sm:w-auto">
        <a href="#contact" class="btn-primary w-full sm:w-auto text-center">
          Demander mon Devis Gratuit
        </a>
        <a href="#services" class="btn-secondary w-full sm:w-auto text-center">
          Découvrir nos Services
        </a>
      </div>

      <div class="flex items-center gap-6 pt-4 text-sm text-dark/60 border-t border-dark/10 w-full">
         <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-primary">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043A3.745 3.745 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 0 1-3.296-1.043 3.745 3.745 0 0 1-1.043-3.296A3.745 3.745 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 0 1 1.043-3.296 3.746 3.746 0 0 1 3.296-1.043A3.746 3.746 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 0 1 3.296 1.043 3.745 3.745 0 0 1 1.043 3.296A3.745 3.745 0 0 1 21 12Z" />
            </svg>
            Garantie Décennale
         </div>
         <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-primary">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            Intervention Rapide
         </div>
      </div>
    </div>

    <div class="relative group aspect-square md:aspect-auto">
      <div class="absolute -inset-4 rounded-3xl bg-primary/5 blur-lg group-hover:bg-primary/10 transition-colors duration-500"></div>
      
      <Image 
        src={heroImage} 
        alt={`Intervention de ${SITE_CONFIG.siteName}`}
        width={600}
        height={600}
        class="relative rounded-3xl object-cover w-full h-full shadow-2xl transition-transform duration-500 group-hover:scale-[1.02]"
        loading="eager"
        fetchpriority="high"
      />
    </div>

  </div>
</section>